<template>
  <view class="container">

    <!-- 用户基本信息 -->
    <view class="user">

      <!-- 用户已登录 -->
      <view class="base" wx:if="{{ user }}">

        <view class="avatar">
          <image src="{{ avatar }}" />
        </view>

        <view class="info">
          <text class="username">{{ username }}</text>
          <text class="remark">{{ address }}</text>
        </view>

      </view>

      <!-- 用户未登录 -->
      <view class="options" wx:if="{{ !user }}">
        <navigator url="/pages/author?refer=/pages/user">请登录</navigator>
      </view>

    </view>

    <!-- 菜单 -->
    <view class="menu">

      <navigator class="item" url="/pages/tester">
        <view class="info">
          <text class="title">我的快递</text>
        </view>
        <image class="arrow" src="/assets/menu-arrow.png" />
      </navigator>

      <navigator class="item" url="/pages/tester">
        <view class="info">
          <text class="title">洗衣订单</text>
        </view>
        <image class="arrow" src="/assets/menu-arrow.png" />
      </navigator>

      <navigator class="item" url="/pages/tester">
        <view class="info">
          <text class="title">租车快递</text>
        </view>
        <image class="arrow" src="/assets/menu-arrow.png" />
      </navigator>

      <navigator class="item" url="/pages/tester">
        <view class="info">
          <text class="title">超市订单</text>
        </view>
        <image class="arrow" src="/assets/menu-arrow.png" />
      </navigator>

      <navigator class="item" url="/pages/tester">
        <view class="info">
          <text class="title">退货快递</text>
        </view>
        <image class="arrow" src="/assets/menu-arrow.png" />
      </navigator>

    </view>

    <!-- 菜单 -->
    <view class="menu">

      <view class="item">
        <view class="info">
          <text class="title" bindtap="clearCache">清除缓存</text>
        </view>
      </view>

      <view class="item">
        <view class="info">
          <text class="title" bindtap="clearCache">关于颂小二</text>
        </view>
      </view>

    </view>

  </view>
</template>

<script>
import wepy from 'wepy';

export default class UserPage extends wepy.page {
  config = {
    navigationBarTitleText: '个人中心'
  }

  // 数据
  data = {
    user: null, // 用户信息
    placeholder: null
  }

  // 计算属性
  computed = {
    // 返回用户头像
    avatar () {
      if (!this.user) return '';
      return this.user.avatarUrl;
    },

    // 返回用户昵称或用户名
    username () {
      if (!this.user) return '';
      return this.user.nickName || this.user.id;
    },

    // 获取用户的所在地区
    address () {
      if (!this.user) return '';
      return this.user.province + ' · ' + this.user.city;
    }
  }

  // 清除缓存
  clearCache () {
    wx.showNavigationBarLoading();
    wx.showLoading({
      title: '正在操作',
      mask: true,
    });

    wx.clearStorage({
      success () {
        setTimeout(() => {
          // 隐藏 loading
          wx.hideNavigationBarLoading();
          wx.hideLoading();

          // 刷新
          wx.reLaunch({
            url: '/pages/user',
          });

        }, 1000);
      },
      fail () {},
      complete () {}
    });
  }

  // 读取用户信息
  initUser () {
    wx.getStorage({
      key: 'user',
      success: (result) => {
        this.user = result.data;
      },
      fail: () => {},
      complete: () => {}
    });
  }

  onLoad () {
  }

  onShow () {
    // 初始化用户信息
    this.initUser();
  }
}
</script>

